#include<stdio.h>
main()
{
 int choice,a,b,s;
 
 while(1)
 {
    printf("\n1. Addition\n");
    printf("2. Odd-Even\n");
	printf("3. Printing\n");
	printf("4. Exit\n");
	printf("Enter your choice: ");
	scanf("%d",&choice);
	switch(choice)
	{
		case 1:
			printf("Enter two number: ");
			scanf("%d %d",&a,&b);
			printf("The sum is: %d\n",a+b);
			break;
		case 2:
			printf("Enter a number: ");
			scanf("%d",&a);
			if(a%2==0)
			printf("It is a even number.\n");
			else
			printf("It is a odd number.\n");
			break;
		case 3:
			printf("Enter a number: ");
			scanf("%d",&a);
			for(b=1;b<=a;b++)
			printf("%d\n",b);
			break;
		case 4:
		return (0);
		default:
			printf("Invalid choice.\n");
	}
	
	}

}
